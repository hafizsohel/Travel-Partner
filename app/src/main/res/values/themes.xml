<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TravelPartner" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.TravelPartner" parent="Base.Theme.TravelPartner" >
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
    </style>



</resources>