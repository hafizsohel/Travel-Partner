<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ghost_white"
            tools:context=".fragment.LocationsDetailFragment">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDetails"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/charcoal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/back_button"
                app:title="Place Overview"
                app:titleTextColor="@android:color/white" />


            <RelativeLayout
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/toolbarDetails"
                android:background="@drawable/rounded_corner_background">

                <ImageView
                    android:id="@+id/placeImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corner_background"/>

                <TextView
                    android:id="@+id/placeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:text="Cox Bazar"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/placeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="162dp"
                    android:text="⭐ 4.8"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/overviewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageCard"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="Overview"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overviewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/overviewHeader"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="textStart"
                android:text="Cox's Bazar Sea Beach is a real gem! Located in Bangladesh, it's known for having one of the longest sandy beaches in the world. The Bay of Bengal graces its shores, making it a picturesque destination."
                android:textColor="#666666"
                android:textSize="14sp" />

            <Button
                android:id="@+id/createTripButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/overviewDescription"
                android:layout_marginTop="16dp"
                android:backgroundTint="#0084FF"
                android:text="Create A Trip"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </RelativeLayout>

</layout>
